[core]
  excludesfile = ~/.gitignore_global
  editor=nvim
  quotepath = false
  fsmonitor = true # for use scalar
  untrackedcache = true # for use scalar

[commit]
  template = ~/dotfiles/git/gitmessages

[color]
  ui = true

[grep]
  lineNumber = true

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    wrap-max-lines = 300
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Coldark-Dark
    navigate = true # use n and N to move between diff sections
    light = false # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
    map-styles = bold purple => syntax magenta, bold cyan => syntax blue

[interactive]
    diffFilter = delta --color-only

[add.interactive]
    useBuiltin = false # required for git 2.37.0 #delta

[diff]
    colorMoved = default #移動されたコード ブロックを検出
    histogram = true

[credential]
  helper = cache --timeout=3600

[init]
   defaultBranch = main

[include]
  path = ~/dotfiles/private-dotfiles/git/gitconfig
