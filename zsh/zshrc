gs() {
  #git diff master HEAD --name-only
  git status
}

dr() {
  local dirs=$HOME/dotfiles/.dirs
  arg=$1
  if [ -z "$arg" ]; then
    return;
  elif [ "$arg" = '--list' ]; then
    cat $dirs
  elif [ "$arg" = '-l' ]; then
    cat $dirs
  else
    target_dir=$(awk -F"\t" -v arg=$arg '$1 == arg {print $2}' $dirs)
    [ -z $target_dir ] && return 1
    cd $target_dir
  fi
}

dw() {
  local dirs=$HOME/dotfiles/.dirs
  arg=$1
  if [ -z "$arg" ]; then
    return;
  elif [ "$arg" = '--list' ]; then
    cat $dirs
  elif [ "$arg" = '-l' ]; then
    cat $dirs
  else
    echo "$arg\t`pwd`" >> $dirs
  fi
}

ga() {
  local selected
  selected=$(\git status -s | fzf -m --ansi --preview="echo {} | awk '{print \$2}' | xargs \git diff" | awk '{print $2}')
  if [[ -n "$selected" ]]; then
    git add `paste -s - <<< $selected`
  fi
  git status
}

